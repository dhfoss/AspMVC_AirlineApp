@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> signInManager
@*@inject UserManager<ApplicationUser> UserManager*@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/content/StyleSheet.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.2/css/v4-shims.css">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">


</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Timec <i class="fas fa-plane"></i></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="ViewAllFlights">View All Flights</a>
                    </li>

                    @if (signInManager.IsSignedIn(User) && (User.IsInRole("BookingAgent") || User.IsInRole("Admin")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BookingAgent" asp-action="ViewPassengerManifests">View Passenger Manifests</a>
                        </li>
                    }

                    @if ((!User.IsInRole("BookingAgent") && (!User.IsInRole("FlightAttendant"))) && (!User.IsInRole("Pilot")) || User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Passenger" asp-action="BookAFlight">Book A Flight</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Passenger" asp-action="ViewReservations">View Reservations</a>
                        </li>

                    }

                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="FlightAttendant" asp-action="ServicePassengers">Service Passengers</a>
                        </li>
                    }

                    @await Component.InvokeAsync("PassengerFlightInProgress")

                    <li class="nav-item">
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main>
        <div>
            @RenderBody()

        </div>
    </main>

    <footer>
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Timec <i class="fas fa-plane"></i></a>
        <a class="contact-us" href="mailto:helpdesk@timecairlines.com">Contact Us</a>

    </footer>

    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script>
        document.querySelectorAll(".mvc-grid").forEach(element => new MvcGrid(element));
    </script>
    @RenderSection("Scripts", required: false)
    <script src="~/content/script.js"></script>
</body>
</html>
